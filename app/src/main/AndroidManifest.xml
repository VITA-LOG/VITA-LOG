<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VITA_LOG"
        tools:targetApi="31">
        <!-- SplashScreenActivity -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <!-- ChatActivity -->
        <activity
            android:name=".ChatActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <!-- MyActivity -->
        <activity
            android:name=".my.QuestionActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.ContactActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.TermsActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.PrivacyActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.TeenagerActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.LicenseActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.IntroActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.DeveloperActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.AdvertiseActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".my.SponsorActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.VITA_LOG"
            android:windowSoftInputMode="adjustResize" />
    </application>
</manifest>