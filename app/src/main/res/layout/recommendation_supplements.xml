<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--  [Title Box(ex. 매일 관리하는 장건강)]  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple"
        android:fontFamily="@font/roboto_black"
        android:text="매일 관리하는 장 건강"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <!--  [Item Box Include]  -->
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:alignItems="center"
        app:flexWrap="nowrap"
        app:justifyContent="space_evenly">

        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:tag="item1">

            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/intestine_one" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="California Gold Nutrition"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LactoBif 5 Probiotics"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="4.5"
                        android:textColor="@color/purple"
                        android:textSize="10sp" />

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/purple"
                        android:rating="4.3" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:tag="item2">

            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/intestine_three" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21st Century"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acidophilus Probiotic Blend"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="4.0"
                        android:textColor="@color/purple"
                        android:textSize="10sp" />

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/purple"
                        android:rating="4" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple"
        android:fontFamily="@font/roboto_black"
        android:text="운동과 건강을 다 잡는 방법"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <!--  [Item Box Include]  -->

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:alignItems="center"
        app:flexWrap="nowrap"
        app:justifyContent="space_evenly">

        <LinearLayout
            android:id="@+id/item3"
