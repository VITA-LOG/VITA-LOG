            android:textSize="18dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yogurtii"
            tools:ignore="RtlCompat,TextSizeCheck" />
        <ImageView
            android:id="@+id/yogurtii0"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:src="@drawable/yogurtii_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yogurtii1" />
        <TextView
            android:id="@+id/yogurtii2"
            android:theme="@style/link"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text='\n\n
