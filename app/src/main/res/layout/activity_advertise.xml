            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yogurtii0"
            tools:ignore="RtlCompat,TextSizeCheck" />
        <TextView
            android:id="@+id/yogurtii3"
            android:theme="@style/link"
